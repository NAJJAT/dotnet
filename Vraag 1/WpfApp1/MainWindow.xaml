<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="prograssbar">
        <Button x:Name="btnload" Content="LoadMovie" Height="30" Margin="0,74,616,0" VerticalAlignment="Top" Click="Button_LoadMovie" Background="Red" HorizontalAlignment="Right" Width="170"/>
        <TextBox x:Name="textboxsearch" Grid.ColumnSpan="3" HorizontalAlignment="Right" Height="37" Margin="0,10,190,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="600"/>
        <Button x:Name="btnsearch" Content="Search" HorizontalAlignment="Left" Height="37" Margin="615,10,0,0" VerticalAlignment="Top" Width="160" Click="Button_Search" Background="#FF50CE22"/>
        <ProgressBar x:Name="prograsBar" HorizontalAlignment="Center" Height="30" Margin="0,74,0,0" VerticalAlignment="Top" Width="422" ValueChanged="ProgressBar_ValueChanged" Maximum="50000"/>
        <ScrollViewer  Margin="10,120,10,10" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="textResult" Height="308" Margin="14,10,0,0" TextWrapping="Wrap" Text="TextBlock" Width="761"/>
        </ScrollViewer>
    </Grid>
</Window>
